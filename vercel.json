{
    "version": 2,
    "builds": [
      {
        "src": "api/chat.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/chat",
        "dest": "/api/chat.js",
        "methods": ["POST"]
      },
      {
        "src": "/texts/(.*)",
        "headers": {
          "Access-Control-Allow-Origin": "*",
          "Cache-Control": "public, max-age=3600"
        }
      },
      {
        "src": "/(.*)",
        "dest": "/index.html",
        "headers": {
          "Access-Control-Allow-Origin": "*"
        }
      }
    ]
  }